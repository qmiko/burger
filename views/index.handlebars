<div class="container">
    <div class="jumbotron">
        <h1>EAT DA BURGER</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <div>
                        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                            <button  type="submit" data-id="{{this.id}}" class='burgerAvailable'>
                                {{this.burger_name}}</button>

                        </form>

                        <button data-id="{{this.id}}" class='deleteBurger'> Delete</button>

                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
            <div class="col-md-6">
                {{#each burgers}}
                {{#if this.devoured}}
                <div class='burgerEaten'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

    <h2>Add A Burger Option</h2>

    <div class="row">
        <div class="col-lg-12">
            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
                <button type="submit" class="addBurgerButton">Add The Burger</button>
            </form>
        </div>
    </div>
</div>
